{
  "name": "long-dream-core",
  "version": "0.6.0",
  "repository": "https://github.com/kt3kstudio/long-dream-core.git",
  "description": "A puzzle game",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "bulbo build",
    "build:gh-pages": "BASEPATH=/pairs/build bulbo build",
    "start": "bulbo serve",
    "lint": "standard",
    "test": "karma start",
    "watch": "WATCH=true npm test",
    "cov": "COV=true npm test",
    "codecov": "npm run cov && codecov",
    "esdoc": "esdoc -c esdoc.json",
    "db": "domaindoc build",
    "ds": "domaindoc serve",
    "lines": "find src/ spec/ -name '*.js' | xargs wc"
  },
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "devDependencies": {
    "@kt3k/puncher": "^5.1.0",
    "arrowkeys": "^0.2.1",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.13.0",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "bulbo": "^6.4.0",
    "bundle-through": "^1.0.3",
    "chai": "^3.5.0",
    "class-component": "^11.0.2",
    "clipboard-js": "^0.3.1",
    "codecov": "^1.0.1",
    "dom-gen": "^2.3.0",
    "domaindoc": "^1.4.2",
    "es6-object-assign": "^1.0.2",
    "es6-promise": "^4.0.4",
    "es6-symbol": "^3.0.2",
    "esdoc": "^0.5.0",
    "event-hub": "^5.0.1",
    "get-property-names": "^1.0.0",
    "gulp-front-matter": "^1.3.0",
    "jquery": "^3.0.0",
    "karma": "^1.0.0",
    "karma-browserify": "^5.0.5",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.0",
    "karma-coverage": "^1.0.0",
    "karma-jsmockito-jshamcrest": "0.0.6",
    "karma-mocha": "^1.0.1",
    "karma-spec-reporter": "0.0.26",
    "layout1": "^1.0.0",
    "mocha": "^3.1.2",
    "multiflip": "^3.0.0",
    "multiflip-bubble": "^4.0.0",
    "nunjucks": "^2.3.0",
    "rx-lite": "^4.0.7",
    "scenarioscript": "^1.0.1",
    "spn": "^3.10.0",
    "standard": "^8.0.0",
    "swipe-event": "^0.4.1",
    "testdouble": "^1.9.0",
    "tether": "^1.3.2",
    "tether-drop": "^1.4.2",
    "traits-decorator": "^1.0.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "decorators-legacy"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "ui",
      "datadomain",
      "infrastructure",
      "location",
      "history",
      "$",
      "Rx",
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "it",
      "expect",
      "assert",
      "when",
      "verify",
      "spy"
    ],
    "ignore": [
      "/build",
      "/doc"
    ]
  }
