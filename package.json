{
  "name": "long-dream-core",
  "version": "0.2.0",
  "repository": "https://github.com/kt3kstudio/long-dream-core.git",
  "description": "A puzzle game",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "bundle exec middleman build",
    "start": "bundle exec middleman",
    "lint": "souffle",
    "test": "karma start karma.js",
    "doc": "jsduck --config=.jsduck.dev.json",
    "doc-release": "git rm -rf doc/v* ; jsduck --config=.jsduck.release.json ; git add doc",
    "lines": "find src/ spec/ -name '*.js' | xargs wc",
    "ci": "karma start karma.js --browsers PhantomJS",
    "coveralls": "karma start karma.js --browsers PhantomJS --reporters coverage,coveralls",
    "prepush": "npm run lint"
  },
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^1.10.0",
    "husky": "^0.8.1",
    "karma": "^0.12.28",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-coverage": "^0.2.7",
    "karma-coveralls": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jsmockito-jshamcrest": "0.0.6",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-spec-reporter": "0.0.16",
    "mocha": "^2.1.0",
    "souffle-cli": "^1.2.0"
  },
  "standard": {
    "globals": [
      "domain",
      "ui",
      "util",
      "scene",
      "datadomain",
      "infrastructure",
      "location",
      "history",
      "subclass",
      "wait",
      "loadImage",
      "$",
      "Rx",
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "it",
      "expect",
      "assert",
      "when",
      "verify",
      "spy"
    ],
    "ignore": [
      "p",
      "m",
      "doc"
    ]
  },
  "souffle": {
    "globals": [
      "domain",
      "ui",
      "util",
      "scene",
      "datadomain",
      "infrastructure",
      "location",
      "history",
      "subclass",
      "wait",
      "loadImage",
      "$",
      "Rx",
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "it",
      "expect",
      "assert",
      "when",
      "verify",
      "spy"
    ],
    "ignore": [
      "p",
      "m",
      "doc"
    ]
  }
}
