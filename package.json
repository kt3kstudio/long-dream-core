    "traits-decorator": "^1.0.1",
    "watchify": "^3.7.0"
  },
  "souffle": {
    "parser": "babel-eslint",
    "globals": [
      "ui",
      "datadomain",
      "infrastructure",
      "location",
      "history",
      "$",
      "Rx",
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "it",
      "expect",
      "assert",
      "when",
      "verify",
      "spy"
    ],
    "ignore": [
      "build",
      "doc"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "decorators-legacy"
    ]
