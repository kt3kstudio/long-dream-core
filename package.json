{
  "name": "pairs",
  "version": "0.6.0",
  "repository": "https://github.com/kt3kstudio/pairs.git",
  "description": "A puzzle game",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "bulbo build",
    "build:gh-pages": "BASEPATH=/pairs bulbo build",
    "start": "bulbo serve",
    "lint": "standard",
    "test": "karma start",
    "watch": "WATCH=true npm test",
    "cov": "COV=true npm test",
    "codecov": "npm run cov && codecov",
    "doc-build": "domaindoc build",
    "doc": "domaindoc serve",
    "lines": "find src/ spec/ -name '*.js' | xargs wc",
    "gh-pages": "rimraf build && npm run build:gh-pages && gh-pages -o hub -d build"
  },
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@kt3k/puncher": "^7.0.1",
    "arrowkeys": "^0.2.1",
    "babel-eslint": "^10.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-register": "^6.3.13",
    "babelify": "^10.0.0",
    "browserify": "^16.0.0",
    "bulbo": "^7.0.0",
    "bundle-through": "^1.0.3",
    "capsid": "0.27.0",
    "chai": "^4.0.1",
    "clipboard-js": "^0.3.1",
    "codecov": "^3.0.0",
    "dom-gen": "^2.3.0",
    "domaindoc": "^3.0.0",
    "envify": "^4.1.0",
    "es6-object-assign": "^1.0.2",
    "es6-promise": "^4.0.4",
    "es6-symbol": "^3.0.2",
    "event-hub": "^6.2.2",
    "get-property-names": "^1.0.0",
    "gh-pages": "^2.0.0",
    "gulp-front-matter": "^1.3.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "jquery": "^3.0.0",
    "karma": "^5.0.3",
    "karma-browserify": "^7.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.0",
    "karma-jsmockito-jshamcrest": "0.0.6",
    "karma-mocha": "^2.0.0",
    "karma-spec-reporter": "^0.0.32",
    "layout1": "^1.0.0",
    "mocha": "^7.0.1",
    "multiflip": "^5.2.0",
    "multiflip-bubble": "^5.0.0",
    "nunjucks": "^3.1.7",
    "postcss-import": "^12.0.0",
    "rimraf": "^3.0.0",
    "rx-lite": "^4.0.7",
    "scenarioscript": "^1.0.1",
    "spn": "^5.6.2",
    "standard": "^14.0.0",
    "stats.js": "^0.17.0",
    "swipe-event": "^0.4.1",
    "testdouble": "^3.2.0",
    "tether": "^1.3.2",
    "tether-drop": "^1.4.2",
    "traits-decorator": "^1.0.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  },
  "standard": {
    "env": [
      "browser",
      "mocha"
    ],
    "parser": "babel-eslint",
    "globals": [
      "infrastructure",
      "capsid",
      "BASEPATH",
      "$",
      "Rx",
      "spy",
      "verify",
      "when",
      "assert",
      "expect"
    ],
    "ignore": [
      "/build",
      "/doc"
    ]
  }
}
